{
  "manifest_version": 3,
  "name": "Random Tab Manager",
  "version": "1.0",
  "description": "Periodically switch, close, and change position of tabs randomly.",
  "permissions": ["tabs", "activeTab", "history", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
